<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Notes Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">


                      <h3>  Ваши записи: </h3>
                        <ul id='block'>
                          <% for(var i=0; i<user.notes.first.length; i++) {%>
                            <li><%= user.notes.first[i] %></li>
                            <% } %>
                        </ul>
                        <form>
                          <input type="textarea" id="textField" />
                        </form>

                        <button id="usBut">User button </button>

            </div>
        </div>

    </div>
    <script>
        var but = document.getElementById('textField'),
            usBut = document.getElementById('usBut'),
            blockNote = document.getElementById('block');


        usBut.onclick = function(e){
          $.ajax({
              url: '/playground/addNote',
              type: 'POST',
              data: 'data=' + but.value,
              success: function(){
                console.log(but.value);
                alert('Load was performed.');
              }
          });
        }

    </script>

</div>
</body>
</html>
